@using OnlineTicariOtomasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

</br>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
    </tr>
    @foreach(var u in Model)
            {
                <tr>
                    <td>@u.UrunId</td>
                    <td>@u.UrunAd</td>
                    <td>@u.UrunMarka</td>
                    <td>@u.UrunStok</td>
                    <td>@u.UrunAlisFiyat</td>
                    <td>@u.UrunSatisFiyat</td>
                    <td>@u.Kategori.KategoriAd</td>
                    <td>@u.UrunGorsel</td>
                </tr>
            }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-info">Yeni Ürün</a>

